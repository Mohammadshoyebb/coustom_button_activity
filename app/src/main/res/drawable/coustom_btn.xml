<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <shape android:shape="rectangle">


        
    <solid
        android:color="#02AE9A"
        />
    <stroke android:color="#C2185B"
        android:width="6dp"
        android:height="3dp"
        android:dashWidth="50dp"

        android:dashGap="0dp"/>


        <corners
            android:bottomLeftRadius="180dp"
            android:bottomRightRadius="10dp"
            android:topLeftRadius="10dp"
            android:topRightRadius="150dp"
            android:radius="50dp"/>

        <padding
            android:bottom="4dp"
            android:left="10dp"

            android:right="4dp"
            android:top="4dp"
            />

<!--        only works when when do not provide height and width while defining button-->

        <size
            android:height="50dp"

            android:width="170dp"/>

        <gradient
            android:angle="10"
            android:centerColor="#004D40"
            android:endColor="@color/white"
            android:gradientRadius="5dp"
            android:centerX="50%"
            android:centerY="60%"
            android:startColor="#7B1FA2"
            android:type="sweep"
            android:useLevel="false"/>



    </shape>

</item>
</selector>